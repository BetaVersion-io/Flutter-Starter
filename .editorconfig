# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Dart files
[*.dart]
indent_style = space
indent_size = 2
max_line_length = 80

# YAML files
[*.{yaml,yml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# XML files (Android)
[*.xml]
indent_style = space
indent_size = 4

# Gradle files
[*.gradle]
indent_style = space
indent_size = 4

# Shell scripts
[*.sh]
end_of_line = lf
indent_style = space
indent_size = 2

# Batch scripts
[*.{bat,cmd}]
end_of_line = crlf

# Makefiles
[Makefile]
indent_style = tab

# Swift files (iOS)
[*.swift]
indent_style = space
indent_size = 4

# Kotlin files (Android)
[*.kt]
indent_style = space
indent_size = 4

# Java files (Android)
[*.java]
indent_style = space
indent_size = 4

# Properties files
[*.properties]
end_of_line = lf
