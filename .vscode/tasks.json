{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "üèóÔ∏è Build Dev APK",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "--flavor",
        "development",
        "--dart-define=FLAVOR=development",
        "--dart-define=ENVIRONMENT=development",
        "--debug"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üì¶ Build Staging APK",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "apk",
        "--flavor",
