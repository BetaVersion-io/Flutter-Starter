        "--flavor",
        "production",
        "--dart-define=FLAVOR=production",
        "--dart-define=ENVIRONMENT=production",
        "--release",
        "--obfuscate",
        "--split-debug-info=build/debug-info"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
