      }
    },
    {
      "label": "üßπ Clean Build",
      "type": "shell",
      "command": "flutter",
      "args": ["clean"],
      "group": "build"
    },
    {
      "label": "üì• Get Dependencies",
      "type": "shell",
      "command": "flutter",
      "args": ["pub", "get"],
      "group": "build"
    },
    {
      "label": "üé® Format Code",
      "type": "shell",
      "command": "dart",
      "args": ["format", "lib/"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "‚öôÔ∏è Generate Code (Build Runner)",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "build", "--delete-conflicting-outputs"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üëÅÔ∏è Watch Code Generation (Build Runner)",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "watch", "--delete-conflicting-outputs"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated"
      }
    },
    {
      "label": "üßπ Clean Generated Code",
      "type": "shell",
      "command": "dart",
      "args": ["run", "build_runner", "clean"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üì± Connect ADB Wireless (Auto IP)",
      "type": "shell",
      "command": "${workspaceFolder}\\.vscode\\scripts\\connect_adb_auto.bat",
      "presentation": {
        "echo": false,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üì± Connect ADB Wireless (Manual IP)",
      "type": "shell",
      "command": "cmd",
      "args": [
        "/c",
        "echo Connecting to ${input:deviceIP}... && adb tcpip 5555 && timeout /t 4 /nobreak >nul && adb connect ${input:deviceIP}:5555 && echo. && echo Connected devices: && adb devices"
      ],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîç Show Device Network Info",
      "type": "shell",
      "command": "${workspaceFolder}\\.vscode\\scripts\\show_network_info.bat",
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    },
    {
      "label": "üîå Disconnect ADB Wireless",
      "type": "shell",
      "command": "adb disconnect",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Flutter Run (Wireless)",
      "dependsOn": ["üì± Connect ADB Wireless (Auto IP)"],
      "dependsOrder": "sequence",
      "type": "shell",
      "command": "flutter run",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": []
    },
    {
      "label": "üöÄ Publish Release",
      "type": "process",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}/.vscode/scripts/publish.ps1"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "shared",
        "clear": true
      },
      "detail": "Push the current branch and release tag to origin to trigger the GitHub publish workflow.",
      "problemMatcher": []
    }
  ],
  "inputs": [
    {
      "id": "deviceIP",
      "type": "promptString",
      "description": "Enter device IP address",
      "default": "192.168.1.100"
    }
  ]
}
