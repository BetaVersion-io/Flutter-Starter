      "args": [
        "build",
        "web",
        "--dart-define=FLAVOR=development",
        "--dart-define=ENVIRONMENT=development",
        "--no-tree-shake-icons",
        "--source-maps"
      ],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      }
    },
    {
      "label": "üåê Build Web Staging",
      "type": "shell",
      "command": "flutter",
      "args": [
        "build",
        "web",
        "--dart-define=FLAVOR=staging",
        "--dart-define=ENVIRONMENT=staging",
